      <TextField fx:id="usernameTextField" layoutX="30.0" layoutY="88.0" prefHeight="74.0" prefWidth="240" promptText="Insert name">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
       <Label layoutX="14.0" layoutY="163.0" text="Adress:Port">
           <font>
               <Font name="System Bold" size="50.0" />
